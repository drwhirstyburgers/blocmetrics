<h1>Register an App</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @registered_application do |f| %>
      <div class="form-group">
        <%= f.label :registration %>
        <%= f.text_field :registration, class: 'form-control', placeholder: "Enter the app URL" %>
      </div>
      <div class="form-group">
        <%= f.label :app_name %>
        <%= f.text_field :app_name, class: 'form-control', placeholder: "Enter the app name" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <h3>Registration</h3>
    <ul>
      <li>Please enter the full URL of the app</li>
      <li>Please enter a name for the app</li>
    </ul>
  </div>
</div>
